{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "OrderService/Dockerfile",
    "buildContext": "OrderService"
  },
  "deploy": {
    "startCommand": "dotnet OrderService.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
